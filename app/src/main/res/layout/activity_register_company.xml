<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.fyp.gosearchphoto.activity.RegisterCompanyActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:gravity="center_horizontal"
            android:text="Register Company Profile"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/candyloopicon" />

        <ImageView
            android:id="@+id/btnRegCompanyProfileClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            app:srcCompat="@drawable/close" />

        <TextView
            android:id="@+id/tvRegCompanyProfileValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="155dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:visibility="invisible" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etRegCProfileName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="sans-serif"
            android:hint=" Company Name"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinnerIndustryReg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/etRegCProfileName"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp" />




        <EditText
            android:id="@+id/etRegCProfileDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/spinnerIndustryReg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:hint="Description"
            android:imeOptions="actionDone"
            android:inputType="textImeMultiLine" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.67"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/btnGoBackCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:height="40dp"
            android:background="@color/button_white"
            android:padding="10dp"
            android:text="Go Back"></Button>

        <Button
            android:id="@+id/btnRegisterCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:height="40dp"
            android:background="@color/button_lightblue"
            android:padding="10dp"
            android:text="Register"></Button>
    </LinearLayout>

</LinearLayout>